@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body style="background-color:#FBFBFC" class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="row w-100" >
        <div class="col-10 offset-1 col-sm-3 offset-sm-3 mx-auto" style="box-shadow:0 0 2px rgba(0, 0, 0, 0.3); padding:20px;background:#FFFFFF; border-radius:6px;border:2px">
            <div class="align-content-center">
                <img class="d-block mx-auto w-50" src="~/img/LogoPlayland.png" />
            </div>         
            <h4 class="text-center fs-4 fw-bold" >!Bienvenido!</h4>
            <p class="text-center" style="color:#64748B">Inicie sesión para realizar la evaluación</p>
            <br />
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger p-0" role="alert">
                 @Html.ValidationSummary(true)
            </div>
            }
            
             
            <form asp-controller="Login" asp-action="Index" method="post">
                <div class="mb-3">
                    <label for="InputUsuario" class="form-label fw-bold">Usuario</label>
                    <input type="text" class="form-control" id="usuario" asp-for="Cedula">
                    
                </div>
                <div class="mb-3">
                    <label for="InputPassword" class="form-label fw-bold">Password</label>
                    <input type="password" class="form-control" id="Password" asp-for="Password">
                </div>
                
                <button type="submit" class="btn fw-bold" style="background-color:#0e1421;width:100%;color:#ffff" >Iniciar sesión</button>
            </form>
        </div>

    </div>
    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
